<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping default-cascade="none" package="org.sakaiproject.tool.section">
	<class name="org.sakaiproject.tool.section.ParticipationRecordImpl" table="SEC_PARTICIPATION_T" discriminator-value="0">
		<id name="id" column="ID" type="long">
			<generator class="native">
				<param name="sequence">SEC_PARTICIPATION_S</param>
			</generator>
		</id>
        <discriminator column="DISCR" type="int"/>
		<version name="version" type="integer" column="VERSION"/>

		<many-to-one 
			name="learningContext"
			class="org.sakaiproject.tool.section.LearningContextImpl"
			column="LEARNING_CONTEXT_ID"
			not-null="true"/>

        <many-to-one
            name="user"
            column="USER_ID"
            class="org.sakaiproject.tool.section.UserImpl"
            not-null="true"/>

		<property name="uuid" column="PARTICIPATION_UUID" type="string" unique="true" not-null="true"/>

        <subclass name="org.sakaiproject.tool.section.EnrollmentRecordImpl" discriminator-value="1">
            <property name="status" column="STATUS" type="string"/>
        </subclass>

        <subclass name="org.sakaiproject.tool.section.InstructorRecordImpl" discriminator-value="2">
        </subclass>

        <subclass name="org.sakaiproject.tool.section.TeachingAssistantRecordImpl" discriminator-value="3">
        </subclass>
    </class>
</hibernate-mapping>
