<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping default-cascade="none" package="org.sakaiproject.tool.section">
    <class name="org.sakaiproject.tool.section.CourseSectionImpl" table="SEC_SECTION_T">
        <id name="id" column="ID" type="long">
            <generator class="native">
                <param name="sequence">SEC_SECTION_S</param>
            </generator>
        </id>
        <version name="version" type="integer" column="VERSION"/>
        
        <many-to-one name="courseOffering" column="COURSE_OFFERING_ID" class="org.sakaiproject.tool.section.CourseOfferingImpl"/>
        <property name="uuid" column="SECTION_UUID" type="string" unique="true" not-null="true"/>
        <property name="title" column="TITLE" type="string" not-null="true"/>
        <property name="meetingTimes" column="MEETING_TIMES" type="string"/>
        <property name="location" column="LOCATION" type="string"/>
        <property name="category" column="CATEGORY"/>
    </class>

    
</hibernate-mapping>
