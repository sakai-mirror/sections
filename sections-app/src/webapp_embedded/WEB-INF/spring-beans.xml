<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="sectionsSessionFactory" class="org.springframework.orm.hibernate.LocalSessionFactoryBean"
		parent="org.sakaiproject.springframework.orm.hibernate.SessionFactoryBase">
		<property name="mappingResources">
		    <list>
				<value>org/sakaiproject/tool/sections/CourseSectionImpl.hbm.xml</value>
			</list>
		</property>
	</bean>

	<bean id="sectionsTransactionManager" class="org.springframework.orm.hibernate.HibernateTransactionManager">
		<property name="sessionFactory"><ref bean="sectionsSessionFactory"/></property>
	</bean>

	<bean id="org.sakaiproject.api.sections.SampleManager" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="sectionsTransactionManager"/></property>
		<property name="target">
			<bean class="org.sakaiproject.component.sections.SampleComponent">
				<property name="sessionFactory"><ref bean="sectionsSessionFactory"/></property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
	            <prop key="create*">PROPAGATION_REQUIRED</prop>
	            <prop key="disband*">PROPAGATION_REQUIRED</prop>
	            <prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>

	<!-- Authn service impl -->
	<bean id="org.sakaiproject.api.sections.facades.Authn"
		class="org.sakaiproject.component.sections.facades.impl.sakai.AuthnSakaiImpl"/>

</beans>
